<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.patal.index.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <!--  servlets  -->
    <servlet>
        <servlet-name>LogIn</servlet-name>
        <servlet-class>com.patal.LogIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.patal.utils.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductManagment</servlet-name>
        <servlet-class>com.patal.productmanagement.ProductManagment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddGenre</servlet-name>
        <servlet-class>com.patal.servlets_directonary.AddGenre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddGraphics</servlet-name>
        <servlet-class>com.patal.servlets_directonary.AddGraphics</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPegi</servlet-name>
        <servlet-class>com.patal.servlets_directonary.AddPegi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProducer</servlet-name>
        <servlet-class>com.patal.servlets_directonary.AddProducer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPublisher</servlet-name>
        <servlet-class>com.patal.servlets_directonary.AddPublisher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddType</servlet-name>
        <servlet-class>com.patal.servlets_directonary.AddType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>com.patal.productmanagement.AddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductToWarehouse</servlet-name>
        <servlet-class>com.patal.warehousemanagment.AddProductToWarehouse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductInfo</servlet-name>
        <servlet-class>com.patal.productInfo.ProductInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoBackToIndex</servlet-name>
        <servlet-class>com.patal.utils.GoBackToIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoToShop</servlet-name>
        <servlet-class>com.patal.utils.GoToShop</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Store</servlet-name>
        <servlet-class>com.patal.store.Store</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.patal.register.Register</servlet-class>
    </servlet>

    <!--    mapping   -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductManagment</servlet-name>
        <url-pattern>/ProductManagment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddGenre</servlet-name>
        <url-pattern>/AddGenre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddGraphics</servlet-name>
        <url-pattern>/AddGraphics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPegi</servlet-name>
        <url-pattern>/AddPegi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProducer</servlet-name>
        <url-pattern>/AddProducer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPublisher</servlet-name>
        <url-pattern>/AddPublisher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddType</servlet-name>
        <url-pattern>/AddType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/AddProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductToWarehouse</servlet-name>
        <url-pattern>/AddProductToWarehouse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductInfo</servlet-name>
        <url-pattern>/ProductInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoBackToIndex</servlet-name>
        <url-pattern>/GoBackToIndex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoToShop</servlet-name>
        <url-pattern>/GoToShop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Store</servlet-name>
        <url-pattern>/Store</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
</web-app>